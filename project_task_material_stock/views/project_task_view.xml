    <record id="task_type_consume_material" model="ir.ui.view">
        <field name="name">project.task.type.consume.material</field>
        <field name="model">project.task.type</field>
        <field name="inherit_id" ref="project.task_type_edit" />
        <field name="arch" type="xml">
            <field name="fold" position="after">
                <field name="consume_material" />
            </field>
        </field>
    </record>
    <record id="view_project_task_form_material_stock" model="ir.ui.view">
        <field name="name">project.task.form.material</field>
        <field name="model">project.task</field>
        <field
            name="inherit_id"
            ref="project_task_material.view_project_task_form_material"
        />
        <field name="arch" type="xml">
            <field name="project_id" position="after">
                <field
                    name="analytic_account_id"
                    groups="analytic.group_analytic_accounting"
                    attrs="{'required': [('project_id', '=', False)]}"
                />
            </field>
            <field name="stage_id" position="before">
                <button
                    name="action_assign"
                    string="Check availability"
                    type="object"
                    class="oe_highlight"
                    attrs="{'invisible':['|', ('consume_material', '=', False), ('stock_state','!=','confirmed')]}"
                />
                <button
                    name="button_scrap"
                    type="object"
                    string="Scrap"
                    attrs="{'invisible': ['|', ('consume_material', '=', False), ('stock_state', 'in', ('cancel', 'draft'))]}"
                />
                <button
                    name="button_unreserve"
                    type="object"
                    string="Unreserve"
                    attrs="{'invisible': ['|', ('consume_material', '=', False), ('unreserve_visible', '=', False)]}"
                />
                <button
                    name="action_cancel"
                    type="object"
                    string="Cancel"
                    attrs="{'invisible': ['|', ('consume_material', '=', False), ('stock_state', '=', 'cancel')]}"
                />
                <button
                    name="action_done"
                    type="object"
                    string="Transfer Materials"
                    attrs="{'invisible':['|', ('consume_material', '=', False), ('stock_state','!=','assigned')]}"
                    class="oe_highlight"
                />
            </field>
            <field name="material_ids" position="replace">
                <field name="stock_state" invisible="1" />
                <field name="consume_material" invisible="1" />
                <field name="unreserve_visible" invisible="1" />
                <group
                    string="Locations to consume"
                    name="materials"
                    groups="stock.group_stock_multi_locations"
                >
                    <field name="picking_type_id" />
                    <field name="location_source_id" />
                    <field name="location_dest_id" />
                </group>
                <group
                    string="Materials consumed"
                    name="materials_consumed"
                    groups="project.group_project_user"
                >
                    <notebook>
                        <page string="Products" name="products">
                            <field
                                name="material_ids"
                                attrs="{'readonly': [('consume_material', '=', True)]}"
                            >
                                <tree string="Materials used" editable="top">
                                    <field name="product_id" />
                                    <field name="quantity" />
                                    <field
                                        name="product_uom_id"
                                        groups="uom.group_uom"
                                    />
                                </tree>
                            </field>
                        </page>
                        <page
                            string="Stock Moves"
                            name="move_raw_ids"
                            attrs="{'readonly': ['|', ('consume_material', '=', False), ('stock_state', '=', 'cancel')]}"
                        >
                            <field name="move_raw_ids">
                                <tree string="Stock Moves" create="0" delete="0">
                                    <field name="product_id" />
                                    <field name="is_done" invisible="1" />
                                    <field name="state" invisible="1" />
                                    <field name="product_uom" groups="uom.group_uom" />
                                    <field name="product_uom_qty" string="To Consume" />
                                    <field
                                        name="reserved_availability"
                                        attrs="{'invisible': [('is_done', '=', True)], 'column_invisible': [('parent.consume_material', '=', False)]}"
                                        string="Reserved"
                                    />
                                    <field
                                        name="quantity_done"
                                        string="Consumed"
                                        attrs="{'column_invisible': [('parent.consume_material', '=', False)]}"
                                        readonly="1"
                                    />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </group>
            </field>
        </field>
    </record>
</odoo>
