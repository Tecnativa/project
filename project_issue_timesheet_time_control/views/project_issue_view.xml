<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="project_issue_form_view" model="ir.ui.view">
            <field name="model">project.issue</field>
            <field name="inherit_id"
                   ref="project_issue_sheet.project_issue_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='timesheet_ids']//field[@name='date']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='timesheet_ids']//field[@name='date']" position="after">
                    <field name="date_time"/>
                </xpath>
                <xpath expr="//field[@name='timesheet_ids']//field[@name='unit_amount']" position="after">
                    <button name="button_end_work"
                            string="Stop"
                            type="object"
                            icon="STOCK_STOP"
                            attrs="{'invisible': [('unit_amount', '>', 0)]}"
                    />
                </xpath>
            </field>
        </record>

        <record id="view_account_analytic_line_tree_inherit_account_id" model="ir.ui.view">
             <field name="name">Adds issue column</field>
             <field name="model">account.analytic.line</field>
             <field name="inherit_id" ref="project_timesheet.view_account_analytic_line_tree_inherit_account_id"/>
             <field name="arch" type="xml">
                <field name="task_id" position="after">
                   <field name="issue_id"
                          domain="[('project_id.analytic_account_id', '=' , account_id)]"/>
               </field>
           </field>
       </record>

    </data>
</openerp>
